{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with Clang",
      "type": "shell",
      "command": "clang++",
      "args": [
        "${file}",
              "-std=c++20",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}.out",
              "-g",
              "--debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "C_Cpp.intelliSenseEngine": "Default"
}

